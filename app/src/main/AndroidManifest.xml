<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="rs.raf.wallet">

    <uses-permission android:name="android.permission.RECORD_AUDIO"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Wallet">
        <activity android:name=".view.activities.SplashActivity" android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".view.activities.LoginActivity" android:theme="@style/Wallet2.Theme">
        </activity>
        <activity android:name=".view.activities.MainActivity" android:theme="@style/Wallet2.Theme">>
        </activity>
        <activity android:name=".view.activities.EditUserActivity" android:theme="@style/Wallet2.Theme">>
        </activity>
        <activity android:name=".view.activities.EditFinanceActivity" android:theme="@style/Wallet2.Theme">>
        </activity>
        <activity android:name=".view.activities.FinanceActivity" android:theme="@style/Wallet2.Theme">>
        </activity>
    </application>

</manifest>